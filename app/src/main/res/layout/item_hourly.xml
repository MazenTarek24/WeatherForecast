<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="120dp"
        android:layout_height="200dp"
        app:cardCornerRadius="40dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/card"
        android:backgroundTint="#6DD0FD"
        >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    >
    <TextView
        android:id="@+id/hour_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_10_am"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#101010"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        />

        <ImageView
         android:id="@+id/day_icon_temp"
         android:layout_width="50dp"
         android:layout_height="50dp"
         android:src="@drawable/ic_launcher_background"
         app:layout_constraintTop_toBottomOf="@+id/hour_date"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         android:layout_marginTop="10dp"
        />

        <TextView
            android:id="@+id/hour_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_30_c"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/day_icon_temp"
            android:textColor="#0C0C0C"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>*
    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>